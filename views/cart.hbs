<head>
    <link rel="stylesheet" href="/css/cart.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>

<div>
    <div class="py-5 bg-black"></div>
    <div class="py-3 bg-black"></div>
    <div class="vh-100 bg-black">
        <div class="container-fluid">

            <div class="row g-0">
                <div class="col-5" style="margin-left: 5%;">
                    <h1>{{user.username}}'s Cart</h1>
                </div>
                <div class="col-4"></div>
                <div class="col-2 py-1">
                    <form action="/logout" method="POST">
                        <button class="btn btn-secondary" type="submit">Log Out </button>
                    </form>
                </div>


                <hr>

                {{#each items}}

                <div class="col-md-6 col-lg-4 col-xl-3 bg-secondary">
                    <a href="/cartItem/{{this._id}}">
                        <div class="collection-img position-relative">
                            <img src="img/{{this.tag}}.jpg">

                        </div>
                        <div class="py-1"></div>
                        <div class="text-center">
                            <p class="text-capitalize my-1">{{this.name}}</p>
                            <span class="fw-bold">$ {{this.price}}</span>
                        </div>
                    </a>
                </div>
                {{/each}}
            </div>

        </div>

    </div>
</div>

</div>